<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="mt-10">
      <h2 class="text-4xl font-extrabold text-center text-red-600 mb-10 tracking-tight">
        Here are your favourites:
      </h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% favouriteHomes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 w-full max-w-xs flex flex-col">
            <img src="/uploads/<%= home.photo %>" alt="<%= home.propertyType %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.propertyType %></h3>
              <p class="text-gray-600 mb-3">
                  <%= home.address.street %>, <%= home.address.city %>, <%= home.address.state %> - <%= home.address.zip %>
                </p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-bold text-red-500">Rs<%= home.pricePerNight %> / night</span>
                <div class="flex items-center">
                  <span class="text-gray-700"><%= home.numberOfRooms %> Rooms</span>
                </div>
              </div>
              <form action="/favourites/delete/<%= home._id %>" method="POST">
                <button class="bg-red-300 hover:bg-red-500  p-2 rounded-lg type="submit">Remove from favourite</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
