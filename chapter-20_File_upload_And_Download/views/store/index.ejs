<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
    <div class="relative z-10">
      <%- include('../partials/nav') %>
      <main class="mt-10 px-4">
        <h2 class="text-4xl font-extrabold text-center text-red-600 mb-10 tracking-tight">
          Welcome to StayEase! Find Your Perfect Stay
        </h2>
        <div class="flex flex-wrap justify-center gap-10 max-w-7xl mx-auto">
          <% registeredHomes.forEach(home => { %>
            <div class="bg-white/95 backdrop-blur-sm rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 w-full max-w-xs flex flex-col overflow-hidden transform hover:-translate-y-1">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
                <p class="text-gray-600 mb-3"><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
                <div class="flex justify-between items-center mb-4">
                  <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1"></svg>
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                    <div class="flex items-center">
                        <span class="text-yellow-400 text-2xl">â˜…</span>
                        <span class="ml-2 text-lg font-semibold"><%= home.rating %> / 5</span>
                    </div>
                  </div>
                </div>
                <form action="/hello" method="GET">
                <button class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition-colors duration-300">Book Now</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>

        <% if (IsLoggedIn === true) { %>
          <div id="login-success-popup" class="fixed top-5 right-5 bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in-down">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">You have logged in successfully ðŸŽ‰</span>
          </div>

          <script>
            setTimeout(() => {
              const popup = document.getElementById('login-success-popup');
              if (popup) popup.remove();
            }, 3000);
          </script>

          <style>
            @keyframes fade-in-down {
              from {
                opacity: 0;
                transform: translateY(-10px);
              }
              to {
                opacity: 1;
                transform: translateY(0);
              }
            }
            .animate-fade-in-down {
              animation: fade-in-down 0.3s ease-out;
            }
            .shadow-text {
              text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }
          </style>
        <% } %>
      </main>
    </div>
  </body>
</html>
