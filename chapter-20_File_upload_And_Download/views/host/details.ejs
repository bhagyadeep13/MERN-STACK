<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-pink-200 via-white to-red-300 min-h-screen font-sans">
  <%- include('../partials/nav') %>
  <main class="bg-white rounded-2xl shadow-xl px-8 py-10 mt-12 mb-12 max-w-4xl mx-auto transition-shadow duration-200 hover:shadow-2xl">
    <h1 class="text-4xl font-extrabold text-center text-red-600 mb-10 tracking-tight">Add New Home Listing</h1>
    <form action="/addDetails" method="POST" enctype="multipart/form-data" class="space-y-7">
      <!-- Property Type -->
      <div>
        <label class="block font-semibold mb-2 text-slate-700">Property Type</label>
        <select name="propertyType" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
          <option disabled selected>Select property type</option>
          <option value="Apartment">Apartment</option>
          <option value="Room">Room</option>
          <option value="House">House</option>
          <option value="Hostel">Hostel</option>
          <option value="PG">PG</option>
        </select>
      </div>

      <!-- Address -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Street</label>
          <input type="text" name="addressStreet" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div>
          <label class="block font-semibold mb-2 text-slate-700">City</label>
          <input type="text" name="addressCity" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div>
          <label class="block font-semibold mb-2 text-slate-700">State</label>
          <input type="text" name="addressState" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Zip</label>
          <input type="text" name="addressZip" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div class="md:col-span-2">
          <label class="block font-semibold mb-2 text-slate-700">Country</label>
          <input type="text" name="addressCountry" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
      </div>

      <!-- Rooms & Capacity -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Number of Rooms</label>
          <input type="number" name="numberOfRooms" min="1" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Guest Capacity</label>
          <input type="number" name="guestCapacity" min="1" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
      </div>

      <!-- Amenities -->
      <div>
        <label class="block font-semibold mb-2 text-slate-700">Amenities <span class="text-xs text-gray-400">(comma separated)</span></label>
        <input type="text" name="amenities" placeholder="e.g. WiFi, Parking, Kitchen" class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
      </div>

      <!-- Price -->
      <div>
        <label class="block font-semibold mb-2 text-slate-700">Price Per Night (INR)</label>
        <input type="number" name="pricePerNight" min="0" required class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
      </div>

      <!-- Availability -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Available From</label>
          <input type="date" name="availableFrom" class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
        <div>
          <label class="block font-semibold mb-2 text-slate-700">Available To</label>
          <input type="date" name="availableTo" class="w-full p-3 border border-gray-300 rounded-lg bg-gray-50 focus:border-blue-600 focus:ring-2 focus:ring-blue-200">
        </div>
      </div>

      <div>
      <label class="block text-gray-700 font-semibold mb-1">Upload Images</label>
          <input
            type="file"
            name="photo"
            multiple accept="image/*"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition bg-white"/>
      </div>

      <!-- Submit -->
      <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-cyan-400 text-white font-semibold py-3 rounded-lg shadow-md hover:from-blue-700 hover:to-cyan-500 transition-all duration-200">
        Submit Listing
      </button>
      
    </form>
  </main>
</body>
</html>
