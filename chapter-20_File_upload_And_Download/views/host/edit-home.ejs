<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="flex flex-col items-center justify-center min-h-[80vh]">
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-10 mt-10">
      <h1 class="text-4xl font-extrabold text-center text-red-600 mb-9 tracking-tight">
        <%= editing ? "Edit" : "Register"%> Your Home on AirBnB
      </h1>
      <form action="/host/<%= editing ? "edit-home" : "add-home"%>" method="POST" enctype="multipart/form-data" class="space-y-5">
        <input type="hidden" name="id" value="<%= editing ? home._id : ''%>" />
        <div>
          <label class="block text-gray-700 font-semibold mb-1">House Name</label>
          <input
            type="text"
            name="houseName"
            value="<%= editing ? home.houseName : ''%>"
            placeholder="Enter your House Name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"/>
        </div>
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Price Per Night</label>
          <input
            type="text"
            name="price"
            value="<%= editing ? home.price : ''%>"
            placeholder="Price Per Night"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"/>
        </div>
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Location</label>
          <input
            type="text"
            name="location"
            value="<%= editing ? home.location : ''%>"
            placeholder="Location"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"/>
        </div>
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Rating</label>
          <input
            type="text"
            name="rating"
            value="<%= editing ? home.rating : ''%>"
            placeholder="Rating"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"/>
        </div>
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Photo</label>
          <input
            type="file"
            name="photo"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition bg-white"/>
        </div>
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Description</label>
          <textarea
            name="description"
            placeholder="Describe your home"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition resize-none h-24"><%= editing ? home.description : ''%></textarea>
        </div>
        
        <a href="/host/addDetails" class="w-full inline-block text-center bg-red-500 text-white py-3 rounded-lg font-bold hover:bg-red-600 transition duration-300 shadow-md">Add More Details</a>

        <input type="submit" value="<%= editing ? "Update Home" : "Add Home"%>" class="w-full bg-red-500 text-white py-3 rounded-lg font-bold hover:bg-red-600 transition duration-300 shadow-md" />
      </form>
    </div>
  </main>
</body>
</html>
