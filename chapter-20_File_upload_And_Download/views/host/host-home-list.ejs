<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="mt-10">
      <div class="bg-gradient-to-br from-red-100 via-white to-red-200 min-h-screen">
        <h2 class="text-4xl font-extrabold text-center text-red-600 mb-10 tracking-tight">
          Hey Host! Here are your Uploaded homes:
        </h2>
        <div class="flex flex-wrap justify-center gap-6">
          <% registeredHomes.forEach(home => { %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 w-full max-w-xs flex flex-col">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-xl">
              <div class="p-5 flex flex-col flex-1">
                <h3 class="text-2xl font-bold text-gray-800 mb-1"><%= home.houseName %></h3>
                <p class="text-gray-500 mb-3 flex items-center">
                  <i class="fas fa-map-marker-alt text-red-400 mr-2"></i>
                  <span><%= home.location %></span>
                </p>
                <div class="flex justify-between items-center mb-4">
                  <span class="text-xl font-bold text-red-500">â‚¹<%= home.price %> <span class="text-sm font-normal text-gray-400">/ night</span></span>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                      <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700 font-medium"><%= home.rating %></span>
                  </div>
                </div>
                <div class="flex gap-3 mt-auto">
                  <a href="/host/edit-home/<%=home._id%>?editing=true" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-lg text-center font-semibold transition">Edit</a>
                  <form action="/host/delete-home/<%= home._id %>" method="POST" class="flex-1">
                    <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg font-semibold transition">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
