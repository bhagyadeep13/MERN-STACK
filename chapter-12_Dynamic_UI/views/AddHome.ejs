<%- include('partials/header') %>
  </head>
  <body class="bg-lime-200 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h1 class="text-2xl font-bold mb-6 text-center text-blue-600">
        Add a New Home
      </h1>
      <form action="/addhome" method="POST" class="space-y-4">
        <div>
          <label for="homename" class="block text-gray-700 font-semibold mb-2"
            >Home Name</label
          >
          <input
            type="text"
            id="homename"
            name="homename"
            placeholder="Enter home name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>
        <div>
          <input
            type="submit"
            value="Submit"
            class="w-full bg-blue-600 text-white font-bold py-2 rounded-lg hover:bg-blue-700 transition duration-200"
          />
        </div>
      </form>
    </div>
  </body>
</html>
