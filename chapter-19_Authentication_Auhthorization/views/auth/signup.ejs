<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto p-8 rounded-lg shadow-md ">
      <h1 class="text-3xl font-bold mb-4 text-center text-gray-800"> Register as a new User </h1>
      <div>
        <!-- Error Message Block -->
      <%- include('../partials/error') %>
      <form action="/signup " method="POST" class="max-w-md mx-auto">
        <input
          type="text"
          name="firstName"
          placeholder="Enter Your First Name"
          value="<%= oldInput.firstName %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/> <!--required is used to enter this value compulsorily-->

          <input
          type="text"
          name="lastName"
          placeholder="Enter Your Last Name"
          value="<%= oldInput.lastName %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/> <!--required is used to enter this value compulsorily-->

          <input
          type="email"
          name="email"
          placeholder="test@pop.com"
          value="<%= oldInput.email %>"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/> <!--required is used to enter this value compulsorily-->

          <input
          type="password"
          name="password"
          placeholder="Enter Your Password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/> <!--required is used to enter this value compulsorily-->

          <input
          type="password"
          name="confirmPassword"
          placeholder="Enter Your Confirm password"
          class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
          required/>
          <!--<div class="mb-4">
          <p>UserType</p>
          <label class="m"><input type="radio" value="guest"><span>Guest</span></label>
          <label><input type="radio" value="host"><span>Host</span></label>
          </div>-->

      <div class="mb-3">
        <p class="text-lg font-semibold mb-2">I want to register as:</p>
        <div class="flex gap-6">
      <label class="flex items-center space-x-2 cursor-pointer">
        <input type="radio" name="userType" value="guest" class="form-radio h-4 w-4 text-blue-600" <%= oldInput.userType === "guest" ? "checked" : "" %> ><span class="text-gray-700">Guest</span>
        </label>
      <label class="flex items-center space-x-2 cursor-pointer">
        <input type="radio" name="userType" value="host" class="form-radio h-4 w-4 text-blue-600" <%= oldInput.userType === "host" ? "checked" : "" %>><span class="text-gray-700">Host</span>
    </label>
  </div>
      </div>
      <div class="mb-3">
         <label><input name="terms" type="checkbox"><span class="text-gray-700" value="<%= oldInput.terms %>"> I agree to terms and conditions</span></label>
      </div>

        <input type="submit" value="SignUp" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
      </form>
      </div>
    </main>
  </body>
</html>
